{
  "dashboard": {
    "title": "API Service Dashboard",
    "uid": "api-service-dashboard",
    "schemaVersion": 39,
    "version": 1,
    "refresh": "10s",
    "time": {
      "from": "now-15m",
      "to": "now"
    },
    "panels": [
      {
        "type": "timeseries",
        "title": "Requests per second (all routes)",
        "datasource": "Prometheus",
        "id": 1,
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "sum(rate(http_request_duration_seconds_count[1m]))",
            "legendFormat": "rps",
            "refId": "A"
          }
        ]
      },
      {
        "type": "timeseries",
        "title": "p95 latency (seconds) by route",
        "datasource": "Prometheus",
        "id": 2,
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 8
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le, route))",
            "legendFormat": "{{route}} p95",
            "refId": "A"
          }
        ]
      },
      {
        "type": "timeseries",
        "title": "5xx error rate (all routes)",
        "datasource": "Prometheus",
        "id": 3,
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 16
        },
        "targets": [
          {
            "expr": "sum(rate(http_request_duration_seconds_count{status_code=~\"5..\"}[1m]))",
            "legendFormat": "5xx rps",
            "refId": "A"
          }
        ]
      }
    ]
  },
  "overwrite": true
}